{
    "name": "ihorrud/counter",
    "description": "Counter that counts your countable habits and motivates you",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Ihorrud\\Counter\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Ihor Rud",
            "email": "ihor.rud@onix-systems.com"
        }
    ],
    "scripts": {
        "lint:fix": "./vendor/bin/php-cs-fixer fix src/",
        "phpstan": "./vendor/bin/phpstan analyse src"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.75",
        "symfony/var-dumper": "^7.2",
        "phpunit/phpunit": "^11.5"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require": {
        "webmozart/assert": "^1.11",
        "bramus/ansi-php": "^3.1"
    }
}
